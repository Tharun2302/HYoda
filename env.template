# ========================================
# HYoda Environment Configuration
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# Ollama Configuration (REQUIRED)
# ========================================
# Ollama server URL (default: host.docker.internal for Docker)
OLLAMA_HOST=http://host.docker.internal:11434
# MedGemma model to use
OLLAMA_MODEL=alibayram/medgemma:4b

# ========================================
# Langfuse Configuration (Optional)
# ========================================
# Set LANGFUSE_ENABLED=true to enable Langfuse tracking
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# ========================================
# MongoDB Configuration (Optional)
# ========================================
# MongoDB URI for session storage
MONGODB_URI=mongodb://mongodb:27017/
MONGODB_DB=healthyoda

# ========================================
# HealthBench Evaluation Models (using Ollama)
# ========================================
HEALTHBENCH_GRADER_MODEL=alibayram/medgemma:4b
HELM_JUDGE_MODEL=alibayram/medgemma:4b

# ========================================
# CORS Configuration
# ========================================
# Update with your server IP and domains
ALLOWED_ORIGINS=http://68.183.88.5:8002,http://localhost:8002,http://127.0.0.1:8002

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ========================================
# Voice Processing (Optional)
# ========================================
VOICE_ENABLED=false
MAX_AUDIO_SIZE=10485760

# ========================================
# Vector Store
# ========================================
# Set to true to rebuild vector store on startup
REBUILD_VECTORSTORE=false

